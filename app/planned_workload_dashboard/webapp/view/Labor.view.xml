<mvc:View controllerName="plannedworkloaddashboard.controller.LaborNeed"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:layout="sap.ui.layout"
  xmlns:table="sap.ui.table">

  <Page id="laborViewPage" showNavButton="true" navButtonPress="onNavBack">

    <!-- ================= HEADER ================= -->
    <customHeader>
      <Bar>
        <contentLeft>
          <Button icon="sap-icon://nav-back" press="onNavBack"/>
        </contentLeft>
        <contentMiddle>
          <Title text="{viewModel>/reportTypeLabel} - Labor Needs Plan View"/>
        </contentMiddle>
      </Bar>
    </customHeader>

    <content>

      <!-- ================================================= -->
      <!-- =============== OUTBOUND ONLY (SINGLE) ========= -->
      <!-- ================================================= -->
      <VBox visible="{viewModel>/showOutboundOnly}" class="sapUiSmallMargin">
        <Panel headerText="Outbound">
          <table:Table rows="{viewModel>/outboundData}" selectionMode="None" visibleRowCount="{= ${viewModel>/outboundData}.length }">
            <table:columns>
              <table:Column>
                <Label text="Activity"/>
                <table:template>
                  <ObjectStatus text="{viewModel>QueueDescription}" class="boldStatus"/>
                </table:template>
              </table:Column>
              <table:Column hAlign="Center">
                <Label text="Need"/>
                <table:template>
                  <ObjectStatus text="{path: 'viewModel>Need', formatter: '.formatTarget'}" state="Information"/>
                </table:template>
              </table:Column>
              <table:Column hAlign="Center">
                <Label text="Current"/>
                <table:template>
                  <ObjectStatus text="{viewModel>Current}" state="Success"/>
                </table:template>
              </table:Column>
              <table:Column hAlign="Center">
                <Label text="Difference"/>
                <table:template>
                  <ObjectStatus text="{viewModel>Difference}" state="{= ${viewModel>Difference} &lt; 0 ? 'Error' : 'Success' }"/>
                </table:template>
              </table:Column>
            </table:columns>
          </table:Table>
        </Panel>
      </VBox>

      <!-- ================================================= -->
      <!-- =============== INBOUND ONLY (SINGLE) ========== -->
      <!-- ================================================= -->
